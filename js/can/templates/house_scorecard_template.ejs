
  <div id="house-rep-grid" class="features-overview">
    <div class="container">
      <div style="margin-bottom: 43px">
        <div>
          <h1 style="text-align: center;"><%= state %> House Of Representatives Scores</h1>
        </div>
      </div>


      <% for (var i=0; i<display_reps.length; i++) {%>

        <div class="col-md-3 col-sm-6">
          <div class="feature">
              <div class="rep-score-card">
                  <div class="rep-info">
                      <div class="rep-portrait">
                          <div class="house-paperclip-container">
                              <img class="house-paperclip-image" alt="paperclip" src="images/paper_clip.png" />
                          </div>
                          <div class="rep-image-container">
                              <img class="rep-image" alt="senator" src="images/bioguide/<%= display_reps[i].bioguide %>.jpg" />
                          </div>
                          <div class="lapdog-image-container" style="<% if ((display_reps[i].voting_score == 0) && (display_reps[i].total_contributions > 0)) {%>display: block;<%} else {%>display: none;<%}%>">
                              <img class="lapdog-image" alt="lapdog" src="images/badges01.png" />
                          </div>
                      </div>
                      <% var fullName = display_reps[i].first + " " + display_reps[i].last,
                             lastname = display_reps[i].last;

                         if (lastname.length > 19) {
                           fullName = display_reps[i].last;
                         } %>
                      <div class="rep-name"<%if (fullName.length > 19) {%> style="font-size: 16px; margin-left: 8px"<%}%>><%if (fullName.length > 17) {%><%= fullName %><%} else {%><%= fullName %><%}%></div>
                      <div class="rep-position"><%
                        switch(display_reps[i].party) {
                            case "R":
                                party = "Republican";
                                break;
                            case "D":
                                party = "Democrat";
                                break;
                            case "I":
                                party = "Independent";
                                break;
                            default:
                                party = "";
                        }
                        %><%= party %></div>
                        <div class="rep-position" style="color:#3D3A3A; font-size: 15px;">
                          <%
                          switch(display_reps[i].type) {
                              case "1" :
                                  suffix = "st";
                                  break;
                              case "21" :
                                  suffix = "st";
                                  break;
                              case "31" :
                                  suffix = "st";
                                  break;
                              case "2" || "22" || "32" :
                                  suffix = "nd";
                                  break;
                              case "22" :
                                  suffix = "nd";
                                  break;
                              case "32" :
                                  suffix = "nd";
                                  break;
                              case "3" :
                                  suffix = "rd";
                                  break;
                              case "23" :
                                  suffix = "rd";
                                  break;
                              case "33" :
                                  suffix = "rd";
                                  break;
                              default:
                                  suffix = "th";
                          }

                          %>
                          <%= display_reps[i].state %> <%= display_reps[i].type %><%= suffix %> District
                        </div>
                  </div>
                   <div class="rating-values">
                      <div class="thumbs-container">
                        <img class="thumbs-image" alt="thumbs" src="<% if ((display_reps[i].voting_score == 0)) {%>images/thumbs_down.png<%}else{%>images/thumbs_up.png<%}%>" />
                      </div>

                      <div class="dollar-container">
                          <%
                          var totalDollars = display_reps[i].total_contributions,
                              dollarAmount = "",
                              emptyAmount = "";

                          switch(true) {
                              case (totalDollars <= 0):
                                  dollarAmount = "";
                                  emptyAmount = "$$$$$";
                                  break;
                              case (totalDollars <= 10000):
                                  dollarAmount = "$";
                                  emptyAmount = "$$$$";
                                  break;
                              case (totalDollars <= 20000):
                                  dollarAmount = "$$";
                                  emptyAmount = "$$$";
                                  break;
                              case (totalDollars <= 45000):
                                  dollarAmount = "$$$";
                                  emptyAmount = "$$";
                                  break;
                              case (totalDollars <= 65000):
                                  dollarAmount = "$$$$";
                                  emptyAmount = "$";
                                  break;
                              case (totalDollars > 65000):
                                  dollarAmount = "$$$$$";
                                  emptyAmount = "";
                                  break;
                              default:
                                  dollarAmount = "";
                                  emptyAmount = "$$$$$";
                          } %>
                          <div class="dollar-amount">
                            <span class="fill"><%= dollarAmount %></span><span class="empty"><%= emptyAmount %></span>
                          </div>
                      </div>
                   </div>
                   <div class="rating-labels">
                     <div class="brady-rating">
                       Brady Rating
                     </div>
                     <div class="gun-lobby">
                       Gun Lobby
                     </div>
                   </div>
             </div>
          </div>
        </div>

      <%}%>



    </div>
  </div>

